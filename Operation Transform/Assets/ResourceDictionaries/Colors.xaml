    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OperationReacquire.Assets.ResourceDictionaries">
    
    <SolidColorBrush x:Name="ApplicationMainColor"
                     Color="Black" />
    
    <SolidColorBrush x:Name="ApplicationBackgroundColor"
                     Color="#fff7f7f7" />

    <SolidColorBrush x:Key="ApplicationPointerOverColor"
                     Color="#ffd5d5d5" />
    
    <SolidColorBrush x:Name="MainPageEmphasizedColor"
                     Color="#ff800080" />

    <SolidColorBrush x:Name="MainPageHoverColor"
                     Color="#d4000000" />

    <SolidColorBrush x:Name="NavigationGridSelectedColor"
                     Color="#ff800080" />

</ResourceDictionary>
