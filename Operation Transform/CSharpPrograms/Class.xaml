                    	<Span Foreground="Black">
                    		<Run Text=" "/>
                    	</Span>
                    	<Span Foreground="#FF2B91AF">
                    		<Run Text="Child"/>
                    	</Span>
                    	<Span Foreground="Black">
                    		<Run Text="();"/>
                    	</Span>
                    	<LineBreak/>
                    	<LineBreak/>
                    	<Span Foreground="Black">
                    		<Run Text="            "/>
                    	</Span>
                    	<Span Foreground="Green">
                    		<Run Text="// Display results:"/>
                    	</Span>
                    	<LineBreak/>
                    	<Span Foreground="Black">
                    		<Run Text="            "/>
                    	</Span>
                    	<Span Foreground="#FF2B91AF">
