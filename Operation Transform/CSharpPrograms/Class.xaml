                    	<Span Foreground="Black">
                    		<Run Text="    "/>
                    	</Span>
                    	<Span Foreground="Blue">
                    		<Run Text="class"/>
                    	</Span>
                    	<Span Foreground="Black">
                    		<Run Text=" "/>
                    	</Span>
                    	<Span Foreground="#FF2B91AF">
                    		<Run Text="Child"/>
                    	</Span>
                    	<LineBreak/>
                    	<Span Foreground="Black">
                    		<Run Text="    {"/>
                    	</Span>
                    	<LineBreak/>
                    	<Span Foreground="Black">
                    		<Run Text="        "/>
                    	</Span>
                    	<Span Foreground="Blue">
                    		<Run Text="private"/>
                    	</Span>
                    	<Span Foreground="Black">
                    		<Run Text=" "/>
                    	</Span>
                    	<Span Foreground="Blue">
                    		<Run Text="int"/>
                    	</Span>
                    	<Span Foreground="Black">
                    		<Run Text=" age;"/>
                    	</Span>
                    	<LineBreak/>
                    	<Span Foreground="Black">
                    		<Run Text="        "/>
                    	</Span>
                    	<Span Foreground="Blue">
                    		<Run Text="private"/>
