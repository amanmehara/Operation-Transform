                    	</Span>
                    	<LineBreak />
                    	<Span Foreground="Blue">
                    		<Run Text="&lt;/" />
                    	</Span>
                    	<Span Foreground="Maroon">
                    		<Run Text="head" />
                    	</Span>
                    	<Span Foreground="Blue">
                    		<Run Text="&gt;" />
                    	</Span>
                    	<LineBreak />
                    	<Span Foreground="Blue">
                    		<Run Text="&lt;" />
                    	</Span>
                    	<Span Foreground="Maroon">
                    		<Run Text="body" />
                    	</Span>
                    	<Span Foreground="Blue">
                    		<Run Text="&gt;" />
                    	</Span>
                    	<LineBreak />
                    	<LineBreak />
                    	<Span Foreground="Blue">
                    		<Run Text="&lt;/" />
                    	</Span>
                    	<Span Foreground="Maroon">
                    		<Run Text="body" />
                    	</Span>
                    	<Span Foreground="Blue">
                    		<Run Text="&gt;" />
                    	</Span>
                    	<LineBreak />
                    	<Span Foreground="Blue">
                    		<Run Text="&lt;/" />
                    	</Span>
                    	<Span Foreground="Maroon">
                    		<Run Text="html" />
                    	</Span>
                    	<Span Foreground="Blue">
                    		<Run Text="&gt;" />
                    	</Span>
                </TextBlock>
            </StackPanel>
